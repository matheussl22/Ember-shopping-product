<LinkTo
  class="product {{if this.zoom "has-zoomed-image"}} {{if @isDetails "product-has-details"}}"
  @route="item"
  @model={{@product.id}}
>
  <Product::Image
    src={{this.productImage}}
    @isDetails={{@isDetails}}
    @zoom={{this.zoom}}
    @toggleZoom={{this.toggleZoom}}
  />
  <Product::Details
    @isDetails={{@isDetails}}
    @product={{@product}}
    @color={{this.color}}
    @colorChanged={{this.updateColor}}
  />
</LinkTo>